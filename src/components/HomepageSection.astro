---
export interface Props {
  title: string;
  gapBetweenItems: string;
}

const { title, gapBetweenItems } = Astro.props;
---

<section>
  <h2>{title}</h2>
  <div class="section-content">
    <slot />
  </div>
</section>

<style define:vars={{ gapBetweenItems }}>
  section {
    padding: 2rem;
    font-family: Oswald;
    font-weight: 300;
    vertical-align: top;
    -ms-overflow-style: none; /* IE and Edge */
    scrollbar-width: none; /* Firefox */
  }
  .section-content {
    flex-direction: row;
    display: flex;
    flex-wrap: wrap;
    row-gap: var(--gapBetweenItems);
  }
  h2 {
    font-size: 2.2rem;
    text-align: center;
    padding-bottom: 1.5rem;
  }
  /* Hide scrollbar for Chrome, Safari and Opera */
  section::-webkit-scrollbar {
    display: none;
  }

  /* TABLET */

  @media (min-width: 768px) and (max-width: 1024px) {
  }

  /* DESKTOP */

  @media (min-width: 1025px) {
    section {
      overflow: auto;
      -ms-overflow-style: none; /* IE and Edge */
      scrollbar-width: none; /* Firefox */
    }
  }
</style>
