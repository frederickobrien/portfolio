---
import ContactLinks from "../ContactLinks.astro";
---

<header>
  <div class="header-content">
    <h2>Frederick O'Brien</h2>
    <div class="subheading">Master of no trades</div>
    <nav>
      <ul>
        <li><a href="/about">About</a></li>
        <li><a href="/contact">Contact</a></li>
      </ul>
    </nav>
  </div>
</header>
<style>
  header {
    position: fixed;
    top: 0;
    left: 0;
    height: 100vh;
    width: 25%;
    display: flex;
    align-items: center;
  }
  h2 {
    margin: 0;
    font-size: 2.5rem;
  }
  img {
    padding: 30px 0;
  }
  nav {
    padding: 20px 0;
  }
  li {
    text-align: left;
    font-family: Oswald;
    font-size: 1.3rem;
    list-style: none;
  }
  .header-content {
    padding: 30px;
  }
  .subheading {
    font-family: "Oswald", sans-serif;
    font-size: 25px;
    font-weight: 300;
  }
</style>
