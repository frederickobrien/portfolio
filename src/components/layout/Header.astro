---
import ContactLinks from "../ContactLinks.astro";
---

<header>
  <div class="header-content">
    <h1><a href="/">Frederick O'Brien</a></h1>
    <div class="subheading">Master of no trades</div>
    <nav>
      <ul>
        <li><a href="/about">About</a></li>
      </ul>
    </nav>
  </div>
</header>
<style>
  h1 a {
    color: black;
    text-decoration: none;
  }
  h1 a:hover {
    opacity: 0.7;
  }
  h1 {
    font-size: 2.5rem;
  }
  img {
    padding: 30px 0;
  }
  nav {
    padding: 20px 0;
  }
  li {
    text-align: left;
    font-family: Oswald;
    font-size: 1.3rem;
    list-style: none;
  }
  .header-content {
    padding: 30px;
  }
  .subheading {
    font-family: "Oswald", sans-serif;
    font-size: 25px;
    font-weight: 300;
  }

  /* TABLET */

  @media (min-width: 768px) and (max-width: 1024px) {
  }

  /* DESKTOP */

  @media (min-width: 1025px) {
    header {
      position: fixed;
      top: 0;
      left: 0;
      height: 100vh;
      width: 25%;
      display: flex;
      align-items: center;
    }
  }
</style>
