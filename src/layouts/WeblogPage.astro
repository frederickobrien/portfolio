---
import BaseLayout from "../components/layout/BaseLayout.astro";

export interface Props {
  content: {
    title: string;
    blurb: string;
    publicationDate: string;
    featuredImage: string;
  };
}

const {
  content: { title, blurb, publicationDate: pubDate, featuredImage },
} = Astro.props;
---

<BaseLayout title={title} description={blurb}>
  <article>
    <h1 class="title">{title}</h1>
    {pubDate && <time>{pubDate}</time>}
    <hr />
    <slot />
  </article>
</BaseLayout>

<style>
  .title {
    font-size: 2em;
    margin: 0.25em 0 0;
  }
  hr {
    border-top: 1px solid #ddd;
    margin: 1rem 0;
  }
  article {
    width: 50%;
    margin: auto;
  }
</style>
