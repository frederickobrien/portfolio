---
import BaseHead from "../components/layout/BaseHead.astro";
import Header from "../components/layout/Header.astro";

export interface Props {
  content: {
    title: string;
    description: string;
  };
}

const {
  content: { title, description },
} = Astro.props;
---

<html lang="en">
  <head>
    <BaseHead title={title} description={description} />
    <style>
      h2 {
        font-size: 1.8rem;
        text-align: center;
        margin-bottom: 1.8rem;
      }
      .page-content {
        width: 90%;
        margin: auto;
        padding-top: 25%;
      }
      .home-link {
        position: absolute;
        top: 20px;
        left: 20px;
        font-size: 1.3rem;
      }
      img {
        mask-image: linear-gradient(
          to bottom,
          rgba(0, 0, 0, 1),
          rgba(0, 0, 0, 0)
        );
      }
      @media (min-width: 768px) and (max-width: 1024px) {
      }

      /* DESKTOP */

      @media (min-width: 1025px) {
        .page-content {
          width: 50%;
          margin: auto;
        }
      }
    </style>
  </head>

  <body>
    <Header />
    <main>
      <div class="page-content">
        <slot />
      </div>
    </main>
  </body>
</html>
